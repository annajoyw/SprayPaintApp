<Window x:Class="SprayPaintApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprayPaintApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="349*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>
        <InkCanvas Margin="15,56,15,56" Grid.Column="1" Name="myInkCanvas" MouseRightButtonUp="RightMouseUpHandler"/>

        <Button Height="23" HorizontalAlignment="Left"
        Margin="29,0,0,381" Name="btnLoad" VerticalAlignment="Bottom"
        Width="75" Click="btnLoad_Click" Grid.ColumnSpan="2">_Load Image</Button>
        <Image  Name="imageBrush"
        Stretch="Fill" Grid.Column="1" />
            
    </Grid>
</Window>
